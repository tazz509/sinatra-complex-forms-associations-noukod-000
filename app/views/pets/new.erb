<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet_name">

  <br></br>
  <h2>Choose an existing owner</h2>
  <%@owners.each do |owner|%>
    <input type="checkbox" name="pet_owner_id" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>


    <br>
      and/or, create a new Owner:
    <label>name:</label>
      <input  type="text" name="owner_name"></input>
    <br>

  <input type="submit" value="Create Pet">
</form>
